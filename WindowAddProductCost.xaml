<Window x:Class="Vosimerka.WindowAddProductCost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vosimerka"
        mc:Ignorable="d"
        Title="WindowAddProductCost" Height="110" Width="300">
    <Grid>
        <TextBox Height="30" Margin="10, 5" Name="tbCostValue" VerticalAlignment="Top"></TextBox>
        <Button Height="30" Margin="10, 5" Click="btAcceptClick" VerticalAlignment="Bottom" Background="#A163F5" BorderBrush="Transparent" Foreground="White">Подтвердить</Button>
    </Grid>
</Window>
